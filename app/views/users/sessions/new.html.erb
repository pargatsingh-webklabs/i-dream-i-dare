
 <div class="block">
   <center><%= render '/shared/public_logo_and_nav' %></center>
     <div class="top-sps">
        <div class="container">
            <h2 class="center">Welcome Back!</h2>
            <div class="row align-items-center h-100 signin-border">
            <!-- <div class="col-md-6 col-sm-6">
            <div class="img-sec"> 
            <img class="slightround_img" src="/assets/login.jpg">
            </div>
            </div> -->
                 <div class="col-md-3 col-sm-3"></div>
                    <div class="col-md-6 col-sm-6 content-center-login signup-form-border">
                        <div class="box_sign text-color-white equal-height back-design">
                        
                              <%= form_for resource, as: resource_name, url: session_path(resource_name),
                            html: { class: "form-horizontal center"} do |f| %>
                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control slightround_img", :autocomplete => :off %>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control slightround_img" %>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                 <% if devise_mapping.rememberable? -%>
    							  
    								<div class="col-sm-10 p-0">
    								  <div class="checkbox pull-left">
    									<label>
    									  <%= f.check_box :remember_me %> Remember me
    									</label>
    								  </div>
    								</div>
    							  
    							<% end -%>
    							<div class="actions logintop">
    							  <%= f.submit "Log in", class: "btn btn-success btn-lg btn-block" %>
    							</div>
    							</div>
                                <div id="form-status" class="pull-left"></div>
                             <% end %>
                             
                            <div class="bg bg-color-default"></div>
                            
                        </div>
                          <div class="col-md-12">
                              <!-- <a href="/users/sign_up">Sign up</a><br> -->
                              <a href="/users/password/new"><button type="submit" id="form-contact-submit" class="btn btn-default">Forgot your password?</button></a><br>
                            </div>
                    </div>
                <div class="col-md-3 col-sm-3"></div>
            </div>
        </div>
        <!--/ .container-->
        <div class="bg"></div><!--/ .bg-->
    </div>
   </div>  
