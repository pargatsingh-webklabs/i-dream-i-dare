<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
      
      <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
       <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head">
          
           <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
            Groups
            </h3>
           </div>
           <p id="notice"><%= notice %></p>
            <div class="kt-portlet__head-label">
            <%= link_to 'New Group', new_group_path, class: "btn btn-success"  %>
         </div>

        </div>
        
        <div class="kt-portlet__body table-responsive p-0 mt-0">
           <table class="table table-striped- table-bordered table-hover table-checkable mt-0" id="kt_table_1">
              <thead>
                <tr>
                  <th>Creator</th>
                  <th>Privacy</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Actions</th>
                   <th class="hideth" >Company Name</th>
                                    <th class="hideth" >Ship Date</th>
                                    <th class="hideth" >Status</th>
                                    <th class="hideth" >Type</th>
                                    <th class="hideth" >Actions</th>
                </tr>
              </thead>

              <tbody>
                <% if @groups != nil %>
                  <% @groups.each do |group| %>
                    <tr>
                      <td><%= group.creator %></td>
                      <td><%= group.privacy %></td>
                      <td><%= group.name %></td>
                      <td><%= group.description %></td>
                      <td>
                        <%= link_to group do %>
                            <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_group_path(group) do %>
                             <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to group, method: :delete, data: { confirm: 'Are you sure?' } do %>
                             <i class="fa fa-trash-alt"></i>
                        <% end %>
                      </td>
                      <td class="hideth" >Haley, Schamberger and Durgan</td>
                                    <td class="hideth" >3/31/2017</td>
                                    <td class="hideth" >2</td>
                                    <td class="hideth" >1</td>
                                    <td class="hideth" nowrap></td>  
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
           </table>
        </div>
       </div>
      </div>
     </div>
