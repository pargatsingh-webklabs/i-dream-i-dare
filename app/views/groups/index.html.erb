      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @groups != nil %>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.creator %></td>
          <td><%= group.privacy %></td>
          <td><%= group.name %></td>
          <td><%= group.description %></td>
          <td>
            <%= link_to 'Show', group %>
            <%= link_to 'Edit', edit_group_path(group) %>
            <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
           </table>
        </div>
       </div>
