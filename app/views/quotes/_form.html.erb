	<!-- begin:: Content -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid p-0" id="kt_content">
	<!--begin::Portlet-->
<div class="kt-portlet">
	<div class="kt-portlet__head">
		<div class="kt-portlet__head-label">
			<h3 class="kt-portlet__head-title">
				New Quote
			</h3>
		</div>
	</div>
	<!--begin::Form-->
	<%= form_for(@quote) do |f| %>
		<div class="kt-portlet__body">
		
		<% if @quote.errors.any? %>
			<div id="error_explanation">
			  <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

			  <ul>
			  <% @quote.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			  <% end %>
			  </ul>
			</div>
		  <% end %>
		
			<div class="form-group row">
				<label class="col-form-label col-lg-2 col-sm-12"><%= f.label :body %></label>
				<div class="col-lg-10 col-md-10 col-sm-12">
						<!--<%= f.trix_editor :body, class: 'form-control', rows: '10', 'data-provide':"markdown" %>-->
						<%= f.text_area :body, class: 'form-control', rows: '10', 'data-provide':"markdown" %>

				</div>
			</div>
			
			<div class="form-group row">
				<label for="example-search-input" class="col-2 col-form-label"> <%= f.label :author %></label>
				<div class="col-8">
					<%= f.text_field :author, class:"form-control" %>
				</div>
			</div>
			<div class="form-group row">
				<label for="example-search-input" class="col-2 col-form-label"> <%= f.label :url_for_image %></label>
				<div class="col-8">
					<%= f.text_field :url_for_image, class:"form-control"  %>
				</div>
			</div>
			
		</div>
		<div class="kt-portlet__foot">
			<div class=" ">
				<div class="row">
					<div class="col-lg-12 ml-lg-auto">
						 <%= f.submit 'Update Quote', :class => "btn btn-success" %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
	<!--end::Form-->
</div>
<!--end::Portlet--></div>
<!-- end:: Content -->	
