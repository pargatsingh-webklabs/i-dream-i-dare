			<div class="kt-portlet kt-portlet--mobile">
				<div class="kt-portlet__head d-flex align-items-center">
				<%= link_to 'New Quote', new_quote_path, class: "btn btn-label-primary btn-pill" %>
				</div>
				</div>
				<div class="kt-portlet__body">
				   <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
					 <thead>
						<tr>
						  <th>Body</th>
						  <th>Author</th>
						  <th>Image</th>
						  <th>Actions</th>
						   <th class="hideth" >Company Name</th>
                                    <th class="hideth" >Ship Date</th>
                                    <th class="hideth" >Status</th>
                                    <th class="hideth" >Type</th>
                                    <th class="hideth" >Actions</th>
						</tr>
					  </thead>

					  <tbody>
						<% if @quotes != nil %>
						  <% @quotes.each do |quote| %>
							<tr>
							  
							  <td><%= raw quote.body %></td>
							  <td><%= quote.author %></td>
							  <td><img src="<%= quote.url_for_image %>" class="img-rounded" alt="None" height="50"></td> 
							  <td>
								<%= link_to quote do %>
									<i class="fa fa-eye"></i>
								<% end %>
								<%= link_to edit_quote_path(quote) do %>
									 <i class="fa fa-edit"></i>
								<% end %>
								<%= link_to quote, method: :delete, data: { confirm: 'Are you sure?' } do %>
									<i class="fa fa-trash-alt"></i>
								 <% end %>
							  </td>
							  <td class="hideth" >Haley, Schamberger and Durgan</td>
                                    <td class="hideth" >3/31/2017</td>
                                    <td class="hideth" >2</td>
                                    <td class="hideth" >1</td>
                                    <td class="hideth" nowrap></td>  
							</tr>
						  <% end %>
						<% end %>
					  </tbody>
				   </table>
				</div>
				<hr>
			 </div>
		  </div>
		  
