<%= form_for(@plan) do |f| %>
<div class="col-xlg-12 col-lg-12 col-md-12 bg-light border-left">
      <div class="card-body">
  <% if @plan.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="hide-this">
    <div class="form-group">
      <% if current_user.is_a_coach? || current_user.is_an_admin? %>
        <%= f.number_field :client, :value => @active_user_id %>
      <% else %>
        <%= f.number_field :client, :value => @current_user.id %>
      <% end %>  
    </div>
  </div>

      <div class="form-group">
             <%= f.label :title %><br>
             <%= f.text_field :title, class:"form-control" %>
      </div>
       <div class="form-group">
        <%= f.label :content %><br>
        <%= f.text_area :content, class:"textarea_editor form-control", rows:"15"   %>
        </div>
        <div class="actions">
          <%= f.submit 'Create plan', :class => 'btn btn-success' %>
        </div>
    </div>
  </div>

<% end %>
